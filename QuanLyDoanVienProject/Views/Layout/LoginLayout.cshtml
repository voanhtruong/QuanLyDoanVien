<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <!--<script src="https://kit.fontawesome.com/9174ffaf18.js" crossorigin="anonymous"></script>-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="~/Content/css/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/css/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/Login.css" />
    <link href="~/faviconbtc.ico" rel="icon" type="image/x-icon" />
</head>
<body>
    <div>
        <div id="head">
            <div class="container">
                <div>
                    <img class="img-fluid" usemap="#reset_map" src="~/Content/Image/Login_header.png" style="width:auto;" alt="Đoàn Trường Đại học Giao thông Vận tải Phân hiệu tại TP. Hồ Chí Minh" />
                    <map name="reset_map">
                        <area alt="Đoàn Trường" shape="circle" coords="123, 53, 30" href="http://dept.utc2.edu.vn/doanthanhnien/" />
                        <area alt="Phân hiệu" shape="circle" coords="833.731, 49.408 , 33" href="http://utc2.edu.vn/" />
                    </map>
                </div>

            </div>
        </div>
        <div id="slider">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10">
                        <div id="slides" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ul class="carousel-indicators">
                                <li data-target="#slides" data-slide-to="0" class="active"></li>
                                <li data-target="#slides" data-slide-to="1"></li>
                                <li data-target="#slides" data-slide-to="2"></li>
                                <li data-target="#slides" data-slide-to="3"></li>
                            </ul>
                            <!-- The slideshow -->
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/Image/slider1.png" />
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/Image/slider0.png" />
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/Image/slider2.png" />
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/Image/slider3.png" />
                                </div>
                            </div>
                            <!-- Left and right controls -->
                            <a class="carousel-control-prev" href="#slides" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </a>
                            <a class="carousel-control-next" href="#slides" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="main">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <div id="main_infor">
                            <h2 title="UTC2 Unionists Management System">HỆ THỐNG<br />QUẢN LÝ ĐOÀN VIÊN UTC2</h2>
                            <hr />
                            <p>
                                Ban Tổ chức Đoàn Trường <br />
                                Bantochucdoantruong@utc2.edu.vn
                            </p>
                            <hr />
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div id="main_user">
                            <form controller="Account" action="Verify" method="post">
                                @RenderBody()
                                <div class="form-group">
                                    <input type="text" name="txtTenDangNhap" class="form-control" placeholder="Nhập mã sinh viên" id="id" required="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="txtMatKhau" class="form-control" placeholder="Nhập mật khẩu" id="pwd" required="">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer" class="container-fluid padding">
            <div class="row text-center padding">
                <div class="col-md-6 ">
                    <h4>Liên hệ với chúng tôi</h4>
                    <div class="col-md-12 social padding">
                        <a href="https://www.facebook.com/thanhnienutc2/"><i class="fab fa-facebook"></i></a>
                        <a href="https://www.youtube.com/channel/UC5YnIEFYR6yX5MnTK4yNCOw"><i class="fab fa-youtube"></i></a>
                        <a href="mailto:quanlydoanvien.utc2@gmail.com"><i class="fas fa-envelope"></i></a>
                        <a href="tel:0357166103"><i class="fas fa-phone"></i></a>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <h5>&copy; by HT Solutions</h5>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
